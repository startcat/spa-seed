{
  "extends": "stylelint-config-recommended",

  "plugins": [
    "@namics/stylelint-bem"
  ],
  
  "rules": {
    "at-rule-no-unknown": [true, {ignoreAtRules: ["mixin"]}],
    "plugin/stylelint-bem-namics": {
      "patternPrefixes": [ "a", "m", "o", "t", "p", "u" ],
      "helperPrefixes": []
    }
  }
}